<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sangjun.myapplication.p_regist">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환자 로그인페이지"
        android:id="@+id/textView6"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:id="@+id/textView7"
        android:layout_marginTop="47dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PW"
        android:id="@+id/textView8"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView18" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText6"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/editText5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/textView18"
        android:layout_marginTop="23dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView8"
        android:layout_alignEnd="@+id/textView19" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText15"
        android:layout_alignBottom="@+id/textView18"
        android:layout_alignStart="@+id/editText6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="담당 간호사"
        android:id="@+id/textView19"
        android:textSize="20dp"
        android:layout_above="@+id/button10"
        android:layout_toStartOf="@+id/button10"
        android:layout_marginBottom="48dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText16"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignStart="@+id/editText17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병명"
        android:id="@+id/textView20"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView18" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText17"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignStart="@+id/editText15" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="회원가입"
        android:id="@+id/button10"
        android:background="#67cee3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
