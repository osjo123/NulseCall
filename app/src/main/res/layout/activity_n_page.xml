<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sangjun.myapplication.n_page">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/button8"
        android:text="환자확인완료"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:textSize="50dp"
        android:background="#67cee3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/button9"
        android:text="호출"
        android:textSize="50dp"
        android:textColor="#fcf8f8"
        android:background="#fa0202"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:id="@+id/textView14"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:layout_below="@+id/button9"
        android:layout_toStartOf="@+id/editText11"
        android:layout_marginEnd="54dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText11"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignEnd="@+id/button9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병명"
        android:id="@+id/textView15"
        android:layout_marginTop="28dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toEndOf="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="담당 간호사"
        android:id="@+id/textView16"
        android:textSize="20dp"
        android:layout_centerVertical="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText13"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignStart="@+id/editText12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="위치"
        android:id="@+id/textView17"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView15" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText14"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignStart="@+id/editText13" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button12"
        android:layout_below="@+id/editText14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
